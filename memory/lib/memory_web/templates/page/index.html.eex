<div class="row">
  <div class="column">
    <h1>Join a Memory Game</h1>
    <input id="input" type="text" />
    <button id="redirect-button">join!</button>
  </div>
</div>

<script>
(function() {
  var redirectButton = document.getElementById("redirect-button");
  redirectButton.addEventListener("click", redirectToPage)
  var userInput = document.getElementById("input")
  function redirectToPage() {
    console.log("to the most exciting game in the world")
    window.location.replace("/game/" + userInput.value)
  }
})()
</script>
